<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="postgresImplementation" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/DefaultDS</jta-data-source>
        <class>dao.layer.dao.adapter.AccountEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="${test.connection.url}"/>
            <property name="hibernate.connection.driver_class" value="${test.connection.driver_class}"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
